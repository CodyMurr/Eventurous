<%- include('../partials/header') %>

    <section id="main" class="flex">
        <% posts.forEach(function(p) { %>
            <div class="felx col">
                <img src="<%= p.userAvatar %>" alt="avatar">
                <h2><%= p.userName %></h2>
            </div>
            <div id="main-content" class="flex col">
                <h2><%= p.title %></h2>
                <aside>
                    <h3 id="event-venue"><%= p.venue %>&nbsp;|&nbsp;<%= p.location %></h3>
                </aside> 
                <a href="/posts/<%= p._id %>"><h2>Details</h2></a>
            </div>    
            
            <% if (user && user._id.equals(p.user)) { %> 
            <div class="flex">
                <form action="/posts/<%= p._id %>?_method=DELETE" method="POST">
                    &nbsp;&nbsp;<button type="submit"><i class="far fa-trash-alt"></i></button>
                </form>
            </div>
            <% } %> 

        <% }); %>
    </section>

<%- include('../partials/footer') %>