<%- include('../partials/header') %>

<% if (user) { %> 
    
    <% posts.forEach(function(p) { %>
        <div id="post-div" class="flex row">
            <section id="post-user" class="flex col">
                <img src="<%= p.userAvatar %>" alt="avatar">
                <h2><%= p.userName %></h2>
            </section>
            <section id="post" class="flex col">
                    <a href="/posts/<%= p._id %>"><h2 class="flex"><%= p.title %></h2></a>
                    <p><%= p.event %></p>
                    <aside>
                        <h3 id="venue"><%= p.venue %>&nbsp;|&nbsp;<%= p.location %></h3>
                    </aside>        
            </section>
            <section id="delete-post" class="flex">
                <% if (user && user._id.equals(p.user)) { %> 
                <form action="/posts/<%= p._id %>?_method=DELETE" method="POST">
                    &nbsp;&nbsp;<button id="delete" type="submit"><i class="far fa-trash-alt"></i></button>
                </form>
                <a href="/posts/<%= p._id %>/edit"><i class="far fa-edit"></i></a>
                <% } %> 
            </section>
        </div>
    <% }); %>
<% } else { %>
    <section id="sign-up" class="flex col">
        <h2>Login/Sign-up: </h2>
        <a href="/auth/google" class="login"><img src="https://i.imgur.com/FHjYyi0.png"></a>
    </section>

<% } %>

<%- include('../partials/footer') %>